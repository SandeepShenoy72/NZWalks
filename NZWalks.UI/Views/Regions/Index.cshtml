@model IEnumerable<NZWalks.UI.Models.Dto.RegionDto>

@{
}
<h1 class="mt-3"><b>Regions</b></h1>

<form method="post" asp-action="SearchRegion">
    <input type="text" placeholder="Enter Id"/>
    <button class="btn btn-primary" type="submit">Search</button>
</form>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary mb-3" style="background-color:black" asp-action="Add">Add Region</a>
</div>

<table class="table table-bordered table-striped" style="background-color:white">
    <thead>
        <tr>
            <th>Id</th>
             <th>Code</th>
            <th>Name</th>
            <th>Image url</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach(var region in Model)
            {
                <tr>
                    <td>@region.Id</td>
                    <td>@region.Code</td>
                    <td>@region.Name</td>
                    <td>@region.RegionImageUrl</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@region.Id" class="btn btn-light">Edit</a>
                    </td>
                </tr>
            }
        </tr>
    </tbody>
</table>