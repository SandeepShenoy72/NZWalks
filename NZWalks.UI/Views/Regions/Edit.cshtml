@model NZWalks.UI.Models.Dto.RegionDto
@{
}


<h1 class="mt-3"> <b>Edit Region</b></h1>

@if(Model!=null)
{
    <form method="post" class="mt-3" style="background-color:white">
        <div class="mt-3">
            <label class="form-label"><b>Id</b></label>
            <input type="text" class="form-control" asp-for="Id" readonly/>
        </div>
        <div class="mt-3">
            <label class="form-label"><b>Code</b></label>
            <input type="text" class="form-control" asp-for="Code" />
        </div>
        <div class="mt-3">
            <label class="form-label"><b>Name</b></label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="form-label"><b>Image Url</b></label>
            <input type="text" class="form-control" asp-for="RegionImageUrl" />
        </div>
        <div class="mt-3" d-flex justify-content-between>
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" asp-controller="Regions" asp-action="Delete" class="btn btn-danger">Delete</button>
        </div>
    </form>
}
