@model NZWalks.UI.Models.AddRegionViewModel
@{

}

<h1 class="mt-3">Add Region</h1>

<form method="post" class="mt-3">
    <div class="mt-3">
        <label class="form-label" style="color: white;">Code</label>
        <input type="text" class="form-control" asp-for="Code" />
    </div>
    <div class="mt-3">
        <label class="form-label" style="color: white;">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label" style="color: white;">Image Url</label>
        <input type="text" class="form-control" asp-for="RegionImageUrl" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
